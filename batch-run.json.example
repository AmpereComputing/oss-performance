{
  "runtimes": {
    "HHVM 3.1": {
      "type": "hhvm",
      "bin": "hhvm-3.1.0"
    },
    "HHVM 3.4": {
      "type": "hhvm",
      "bin": "hhvm-3.4.0"
    },
    "HHVM 2015-01-15": {
      "type": "hhvm",
      "bin": "hhvm-nightly-2015-01-15"
    },
    "PHP7, 60 children": {
      "type": "php-src",
      "bin": "php7-cgi-2015-01-14"
    },
    "PHP7, 150 children": {
      "type": "php-src",
      "bin": "php7-cgi-2015-01-14",
      "__comment": [
        "i-am-not-benchmarking is required to change the FCGI child count;",
        "we are benchmarking, but every rule has exceptions :)"
      ],
      "args": [ "--php-fcgi-children=150", "--i-am-not-benchmarking" ]
    },
    "PHP 5.5": {
      "type": "php-src",
      "bin": "php-cgi-5.5.9"
    }
  },
  "targets": [
    "wordpress",
    "drupal7",
    "sugarcrm-home-page",
    "sugarcrm-login-page",
    "mediawiki",
    "magento1"
  ],
  "runtime-overrides": {
    "sugarcrm-home-page": {
      "__comment": [
        "Recent versions of PHP7 segfault in clean_non_persistent_constants()"
      ],
      "PHP7, 60 children": {
        "bin": "php7-cgi-2014-08-15"
      },
      "PHP7, 150 children": {
        "bin": "php7-cgi-2014-08-15"
      }
    },
    "magento1": {
      "__comment": [
        "Recent versions of PHP7 can not run Magento1 because of",
        "https://wiki.php.net/rfc/uniform_variable_syntax"
      ],
      "PHP7, 60 children": {
        "bin": "php7-cgi-2014-08-15"
      },
      "PHP7, 150 children": {
        "bin": "php7-cgi-2014-08-15"
      }
    },
    "mediawiki": {
      "__comment": [
        "There appears to be a database contention issue with any ",
        "non-trivial increase in children - mediawiki starts returning 500s"
      ],
      "PHP7, 150 children": {
        "skip": true
      }
    }
  }
}
